<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopuntuaciones">

    <TextView
        android:id="@+id/points"
        android:layout_width="242dp"
        android:layout_height="43dp"
        android:layout_marginBottom="188dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="PUNTOS"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <Button
        android:id="@+id/notSave"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/grey"
        android:text="@string/NoGuardar"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points"
        app:layout_constraintVertical_bias="0.228" />

    <Button
        android:id="@+id/save"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/grey"
        android:text="@string/guardar2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/notSave" />
</android.support.constraint.ConstraintLayout>